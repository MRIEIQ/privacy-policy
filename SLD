<script>
  function toggleTheme() {
    if(document.body.style.backgroundColor === '' || document.body.style.backgroundColor === 'rgb(240, 242, 245)'){
      document.body.style.backgroundColor = 'var(--background-dark)';
      document.body.style.color = 'var(--text-dark)';
      document.querySelector('main').style.background = 'var(--card-dark)';
      document.querySelector('.footer').style.color = '#aaa';
    } else {
      document.body.style.backgroundColor = 'var(--background-light)';
      document.body.style.color = 'var(--text-light)';
      document.querySelector('main').style.background = 'var(--card-light)';
      document.querySelector('.footer').style.color = '#555';
    }
  }
</script>

